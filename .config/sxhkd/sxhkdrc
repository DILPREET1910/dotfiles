# volume controls
XF86AudioLowerVolume 
  pactl set-sink-volume @DEFAULT_SINK@ -5%
XF86AudioRaiseVolume 
  pactl set-sink-volume @DEFAULT_SINK@ +5%
XF86AudioMute 
  pactl set-sink-mute @DEFAULT_SINK@ toggle
XF86AudioPlay 
	playerctl play-pause
XF86AudioPause
	playerctl play-pause
alt + o
	playerctl play-pause
XF86AudioNext
	playerctl next
XF86AudioPrev
	playerctl previous

# microphone controls
XF86Launch5
  pactl set-source-mute @DEFAULT_SOURCE@ toggle

# slock
super + l
	slock

# clip menu
super +v 
	clipmenu

# screenshot
Print
  gnome-screenshot --interactive
ctrl + Print
  flameshot gui

# brave
super + w
  brave
super + W
  brave --incognito

# mailspring
alt + G
  mailspring --password-store="gnome-libsecret"

# map page up, down, home of numpad to zoom in, out and reset in st
ctrl + shift + KP_Prior
  xdotool keyup KP_Prior && xdotool key Prior
ctrl + shift + KP_Next
  xdotool keyup KP_Next && xdotool key Next
ctrl + shift + KP_Home
  xdotool keyup KP_Home && xdotool key Home

# open nautilus
# home folder
super + e
  nautilus
# downloads folder
alt + ctrl + j
  nautilus ~/Downloads
# Documents folder
alt + ctrl + d
  nautilus ~/Documents

# dmenu bookmark
super + i
  ~/Documents/MyPrograms/Scripts/dmenu-bookmark/bookmark
super + b
  ~/Documents/MyPrograms/Scripts/dmenu-bookmark/add-bookmark
super + B
  sleep 0.1 && xdotool keyup shift && sleep 0.1 && xdotool key alt+shift+return && sleep 0.1 && xdotool type "nvim ~/Documents/MyPrograms/Scripts/dmenu-bookmark/.cache/bookmarks" && sleep 0.1 && xdotool key return

# kill dwm instance
alt + Q
  killall -p dwm
